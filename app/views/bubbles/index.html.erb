<p id="notice"><%= notice %></p>

<h1>Bubbles for <%= @tree.name %></h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bubbles.each do |bubble| %>
      <tr>
        <td><%= bubble.name %></td>
        <td><%= bubble.description %></td>
        <td><%= link_to 'Show', [@project, @tree, bubble] %></td>
        <td><%= link_to 'Edit', edit_project_tree_bubble_path(@project, @tree, bubble) %></td>
        <td><%= link_to 'Destroy', [@project, @tree, bubble], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bubble', new_project_tree_bubble_path(@project, @tree) %>
