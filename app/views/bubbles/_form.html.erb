<%= form_with(model: bubble, url: [project, tree, bubble], local: true) do |form| %>
  <% if bubble.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(bubble.errors.count, "error") %> prohibited this bubble from being saved:</h2>

      <ul>
      <% bubble.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <%= select("bubble",
             "parent_id",
             @bubbles.collect { |b| [b.name, b.id] }, 
             {include_blank: true}) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
