<p id="notice"><%= notice %></p>

<h1>Trees</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trees.each do |tree| %>
      <tr>
        <td><%= tree.name %></td>
        <td><%= tree.project.name %></td>
        <td><%= link_to 'Show', project_tree_path(@project, tree) %></td>
        <td><%= link_to 'Edit', edit_project_tree_path(@project, tree) %></td>
        <td><%= link_to 'Destroy', project_tree_path(@project, tree), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tree', new_project_tree_path(@project) %>
